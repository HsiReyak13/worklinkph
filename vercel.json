{
  "buildCommand": "npm install && cd server && npm install && cd .. && npm run build",
  "outputDirectory": "build",
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/((?!static/).*)",
      "destination": "/index.html"
    }
  ]
}

